{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "../src/*", "./*"]
    },
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"],
    "emit": true,
    "compilerOptions": {
      "sourceMap": true
    }
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ]
}